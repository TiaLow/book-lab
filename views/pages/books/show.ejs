<!DOCTYPE html>
<html lang="en">
<head>

  <%- include('../../layout/head.ejs') %>

  <title>Book Details</title>

</head>

<body>

  <%- include('../../layout/header.ejs') %>

  <h1>Book Details</h1>
  <%- include('detail.ejs') %>

  <button type="button" id="showForm">Show Form</button>

  <form id="update-details" action="/detail/<%= book.id %>?_method=PUT" method="post">
    <fieldset>
      <!-- took off type="hidden" -->
      <input name="title" value="<%= book.title %>">
      <input name="authors" value="<%= book.author %>">
      <input name="description" value="<%= book.description %>">
      <!-- <input name="image_url" value="<%= book.thumbnail %>"> -->
      <input name="isbn" value="<%= book.isbn%>">
      <input name="bookshelf" value="<%= book.bookshelf%>">
      <button type="submit">Update Book Details</button>
    </fieldset>
  </form>



  <%- include('../../layout/footer.ejs') %>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="../../../js/app.js"></script>


</body>
</html>
