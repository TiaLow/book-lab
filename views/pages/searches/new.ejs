<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../layout/head.ejs') %>
    <title>Book Search</title>
  </head>

<body>
  
  <%- include('../../layout/header.ejs') %>
  
  <main>


    <section>
      <h3>Search by Title or Author</h3>

      <!-- the action below is what sends it on the route -->
      <!-- the method of post also has to match the app.post route -->
      <form action="/searches" method="post">

        <input type="text" name="search" placeholder="Enter a title or author" required>
        
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="radio" name="search" value="title" required>
          </label>
        </fieldset>

        <fieldset>
          <label for="author">
            <span>Author</span>
            <input type="radio" name="search" value="author" required>
          </label>
        </fieldset>

        <button type="submit">Search the Google Books API</button>

      </form>
    </section>

  </main>

  <%- include('../../layout/footer.ejs') %>

</body>

</html>