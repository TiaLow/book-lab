<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="../styles/reset.css">
    <link rel="stylesheet" type="text/css" href="../styles/base.css">
    <link rel="stylesheet" type="text/css" href="../styles/layout.css">
    <link rel="stylesheet" type="text/css" href="../styles/modules.css">
    <link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">

    <title>Search Results</title>
</head>
<body>
  <header>
    <nav>
      <a href="../">Home</a>
      <a href="/searches/new">New Search</a>
      <a href="/searches/show">Results</a>
    </nav>
  </header>

  <h1>Search Results</h1>

  <main>
    <div class="results">
      <% searchResults.forEach( book => { %>
        <img src="<%=book.thumbnail %>">
        <h2 id="test"><%= book.title %></h2>
        <h3><%= book.authors %></h3>
        <p><%= book.description %></p>

        <form id="create-form" action="/add" method="post">
          <fieldset>
            <input type="hidden" name="title" value="<%= book.title %>">
            <input type="hidden" name="authors" value="<%= book.authors %>">
            <input type="hidden" name="description" value="<%= book.description %>">
            <input type="hidden" name="image_url" value="<%= book.thumbnail %>">
            <input type="hidden" name="isbn" value="<%= book.isbn%>">
            <button type="submit">Add To Favorites</button>
          </fieldset>
        </form>
      <% }) %>
      <input>
    </div>

  </main>
  
</body>
</html>